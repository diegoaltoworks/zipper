{
  "name": "@diegoaltoworks/zipper",
  "version": "1.0.5",
  "description": "An isomorphic TypeScript package for downloading and zipping files in browser and Node.js",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "default": "./dist/index.esm.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "author": "Diego Alto <diego@diegoalto.works>",
  "repository": {
    "type": "git",
    "url": "https://github.com/diegoaltoworks/zipper.git"
  },
  "bugs": {
    "url": "https://github.com/diegoaltoworks/zipper/issues"
  },
  "homepage": "https://diegoaltoworks.github.io/zipper",
  "scripts": {
    "build": "rollup -c",
    "test": "jest --testTimeout=10000",
    "test:watch": "jest --watch --testTimeout=10000",
    "test:coverage": "jest --coverage --testTimeout=10000",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "download",
    "zip",
    "bulk",
    "files",
    "browser",
    "node",
    "nodejs",
    "server",
    "isomorphic",
    "universal",
    "jszip",
    "file-saver"
  ],
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/file-saver": "^2.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "rollup": "^4.9.2",
    "rollup-plugin-dts": "^6.1.0",
    "sharp": "^0.34.5",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1"
  }
}
